<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_item">

    <fragment
        android:id="@+id/navigation_item"
        android:name="com.sekud.id.feature.fragment.ItemFragment"
        android:label="@string/title_item"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.sekud.id.feature.fragment.AboutFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_location"
        android:name="com.sekud.id.feature.fragment.LocationFragment"
        android:label="@string/title_location"
        tools:layout="@layout/fragment_notifications" />

</navigation>