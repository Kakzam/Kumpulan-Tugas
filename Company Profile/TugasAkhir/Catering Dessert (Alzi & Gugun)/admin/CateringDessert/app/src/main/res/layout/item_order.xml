<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_14sdp"
    app:cardElevation="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/item_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="id" />

        <TextView
            android:id="@+id/item_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name" />

        <TextView
            android:id="@+id/item_order_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="phone" />

        <TextView
            android:id="@+id/item_order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="address" />

        <TextView
            android:id="@+id/item_order_nik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="nik" />

        <TextView
            android:id="@+id/item_order_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="pesanan" />

        <TextView
            android:id="@+id/item_order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="total" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_order_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_button_primary"
                android:gravity="center"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Konfirmasi"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/item_order_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_button_secondary"
                android:gravity="center"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Detail"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>