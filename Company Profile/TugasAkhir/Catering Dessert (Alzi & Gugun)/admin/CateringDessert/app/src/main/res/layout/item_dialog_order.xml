<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:padding="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_order_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:padding="@dimen/_4sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/black"
                tools:text="name" />

            <TextView
                android:id="@+id/item_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="harga" />

            <TextView
                android:id="@+id/item_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="jumlah" />

            <TextView
                android:id="@+id/item_order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="total" />

            <TextView
                android:id="@+id/item_order_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/ic_button_primary"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="Selesai"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>