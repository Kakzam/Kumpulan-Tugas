<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_14sdp"
    app:cardElevation="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/item_sosmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="IG" />

        <TextView
            android:id="@+id/item_sosmed_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="nama_akun" />

        <TextView
            android:id="@+id/item_sosmed_open"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/ic_tombol_lanjut"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Open"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/item_sosmed_hapus"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/ic_tombol_utama"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Hapus"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</androidx.cardview.widget.CardView>