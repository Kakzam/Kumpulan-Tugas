<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout"
    tools:context=".DetailActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_detail_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_24sdp"
            tools:text="Judul" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_detail_gambar"
            android:layout_width="@dimen/_214sdp"
            android:layout_height="@dimen/_214sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_22sdp" />

        <TextView
            android:id="@+id/activity_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:background="@drawable/background_description"
            android:padding="@dimen/_14sdp"
            android:textColor="#838181"
            android:textSize="@dimen/_14sdp"
            tools:text="Buket Uang lembar pecahan 50Rb
Harga jasa menyesuaikan berapa banyak lembar yang digunakan

1-10 Lembar Uang kertas : Rp. 35.000
11-20 Lembar Uang kertas : Rp. 50.000
21-30 Lembar uang kertas : Rp. 70.000
30-50 Lembar Uang kertas : Rp. 120.000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:background="@drawable/background_description"
            android:padding="@dimen/_14sdp"
            android:textColor="#838181"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:text="Untuk Request lebih lanjut  hubungi admin di Wa:" />

        <TextView
            android:id="@+id/activity_detail_wa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:gravity="center"
            android:textColor="#F50000"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            tools:text="wa.me//0987654321" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>